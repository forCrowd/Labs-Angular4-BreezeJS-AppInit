{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": false,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5"
    },
    "include": [
        "app"
    ],
    "exclude": [
        "app/boot-aot.ts",
        "node_modules"
    ]
}
